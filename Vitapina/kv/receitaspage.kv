<ReceitasPage>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#2aadcd")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (20, 20), (20, 20)]
            text: ""
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.10

        Image:
            pos_hint: {"right": 0.625, "top": 1}
            size_hint: 0.25, 0.1
            source: "icones/logotipo.png"
            id: foto_perfil

        Label:
            pos_hint: {"right": 0.3, "top": 0.7}
            size_hint: 0.1, 0.05
            text: "Café da Manhã"
            id: cafe_manha

        ScrollView:
            pos_hint: {"right": 1, "top": 0.68}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
