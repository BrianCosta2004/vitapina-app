<ReceitasPage>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#FF0000") #fffbf0
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (20, 20), (20, 20)]
            text: ""
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.10

        Image:
            pos_hint: {"right": 0.625, "top": 1}
            size_hint: 0.25, 0.1
            source: "icones/logotipo.png"
            id: foto_perfil

        ScrollView:
            pos_hint: {"right": 1, "top": 0.85}
            size_hint: 1, 0.78
            GridLayout:
                cols: 1
                id: lista_refeicoes
                size_hint_y: None
                height: "800dp"


                Label:
                    text: "[color=#000000][size=20][b]Café da Manhã[/b][/size][/color]"
                    id: cafe_manha
                    size_hint_y: None

                    markup: True

                ScrollView:
                    size_hint_y: None

                    GridLayout:
                        rows: 1
                        id: lista_alimentos_cafe
                        size_hint_x: None
                        width: self.minimum_width
                        spacing: 20, 2
                        col_default_width: "150dp"
                        col_force_default: True



                Label:
                    text: "[color=#000000][size=20][b]Almoço[/b][/size][/color]"
                    id: almoco
                    size_hint_y: None

                    markup: True

                ScrollView:
                    size_hint_y: None

                    GridLayout:
                        rows: 1
                        id: lista_alimentos_almoco
                        size_hint_x: None
                        width: self.minimum_width
                        col_default_width: "150dp"
                        spacing: 20, 2
                        col_force_default: True


                Label:
                    text: "[color=#000000][size=20][b]Lanche[/b][/size][/color]"
                    id: lanche
                    size_hint_y: None

                    markup: True

                ScrollView:
                    size_hint_y: None

                    GridLayout:
                        rows: 1
                        id: lista_alimentos_lanche
                        size_hint_x: None
                        width: self.minimum_width
                        col_default_width: "150dp"
                        spacing: 20, 2
                        col_force_default: True



                Label:
                    text: "[color=#000000][size=20][b]Janta[/b][/size][/color]"
                    id: janta
                    size_hint_y: None

                    markup: True

                ScrollView:
                    size_hint_y: None

                    GridLayout:
                        rows: 1
                        id: lista_alimentos_janta
                        size_hint_x: None
                        width: self.minimum_width
                        col_default_width: "150dp"
                        spacing: 20, 2
                        col_force_default: True


        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#eb7b29")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

            pos_hint: {"right": 0.9, "top": 0.18}
            size_hint: 0.8, 0.065
            text: "[color=#FFFFFF]Cadastrar Receita[/color]"
            id: label_total_vendas
            markup: True
            on_release: app.mudar_tela("adicionarreceitaspage")

        Label:
            pos_hint: {"right": 0.4, "top": 0.89}
            size_hint: 0.4, 0.04
            text: "[color=#000000][b]Livro de Receitas[/b][/color]"
            id: cafe_manha
            markup: True

        CircleAroundButton:
            id: circle_widget

        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.07}
            size_hint: 1, 0.07
            canvas:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/receita.png"
                on_release: app.mudar_tela("receitaspage")
            ImageButton:
                source: "icones/fogo.png"
                on_release: app.mudar_tela("caloriaspage")
            ImageButton:
                source: "icones/graph.png"
                on_release: app.mudar_tela("glicemiapage")
            ImageButton:
                source: "icones/user.png"
                on_release: app.mudar_tela("perfilpage")
