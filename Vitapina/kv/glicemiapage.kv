<GlicemiaPage>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#8dd0d9")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (20, 20), (20, 20)]
            text: ""
            pos_hint: {"right": 0.95, "top": 1}
            size_hint: 0.9, 0.35

        HeatMapLabel:
            text: "[color=#00FF00][size=100]90[/size][/color]"
            pos_hint: {"right": 0.85, "top": 0.9}
            size_hint: 0.7, 0.33
            markup: True
            bold: True

        Retangulo:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("FFFFFF")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
            pos_hint: {"right": 0.9, "top": 0.60}
            size_hint: 0.8, 0.45

        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#eb7b29")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

            pos_hint: {"right": 0.9, "top": 0.19}
            size_hint: 0.8, 0.065
            text: "[color=#FFFFFF]Ver Hist√≥rico[/color]"
            id: label_total_vendas
            markup: True
            on_release: app.mudar_tela("historicorefeicoespage")

        CircleAroundButton:
            id: circle_widget

        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.07}
            size_hint: 1, 0.07
            canvas:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/receita.png"
                on_release: app.mudar_tela("receitaspage")
                on_press: circle_widget.show_circle(self.center, self.size)
            ImageButton:
                source: "icones/fogo.png"
                on_release: app.mudar_tela("caloriaspage")
                on_press: circle_widget.show_circle(self.center, self.size)
            ImageButton:
                source: "icones/graph.png"
                on_release: app.mudar_tela("glicemiapage")
                on_press: circle_widget.show_circle(self.center, self.size)
            ImageButton:
                source: "icones/user.png"
                on_release: app.mudar_tela("perfilpage")
                on_press: circle_widget.show_circle(self.center, self.size)

        Image:
            pos_hint: {"right": 0.625, "top": 1}
            size_hint: 0.25, 0.1
            source: "icones/logotipo.png"
            id: foto_perfil

        CurvaGlicemicaWidget:
            pos_hint: {"right": 0.86, "top": 0.55}
            size_hint: 0.75, 0.33

