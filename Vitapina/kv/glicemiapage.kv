<GlicemiaPage>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#2aadcd")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (20, 20), (20, 20)]
            text: ""
            pos_hint: {"right": 0.95, "top": 1}
            size_hint: 0.9, 0.4

        SemicircleProgressBar:
            min: 0
            max: 200
            value: 50
            pos_hint: {"right": 0.85, "top": 0.85}
            size_hint: 0.7, 0.33

        Label:
            text: "[size=100]90[/size]"
            pos_hint: {"right": 0.85, "top": 0.87}
            size_hint: 0.7, 0.33
            markup: True
            bold: True

        Image:
            pos_hint: {"right": 0.9, "top": 1}
            size_hint: 0.8, 0.10
            source: "icones/logotipo.png"
            id: foto_perfil