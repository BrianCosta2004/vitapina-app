<AdicionarReceitasPage>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#8DD0D9")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (20, 20), (20, 20)]
            text: ""
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.1

        Image:
            pos_hint: {"right": 0.625, "top": 1}
            size_hint: 0.25, 0.1
            source: "icones/logotipo.png"
            id: foto_perfil

        Label:
            id: tipo_refeicao
            text: ""
            pos_hint: {"right": 0.8, "top": 0.85}
            size_hint: 0.1, 0.01



    # ------------------------------------------------------------------------------
        ScrollView:
            pos_hint: {"right": 0.9, "top": 0.79}
            size_hint: 0.8, 0.6
            GridLayout:
                cols: 1
                size_hint_y: None
                spacing: 2, 10
                height: self.minimum_height
                row_default_height: "40dp"
                row_force_default: True
                size_hint_y: None
                height: "900dp"

                Label:
                    text: "[color=#000000][b]Titulo[/b][/color]"
                    markup: True

                TextInput:
                    id: titulo
                    hint_text: "Título da Receita"

                Label:
                    text: "[color=#000000][b]Titulo[/b][/color]"
                    markup: True

                CheckBox:
                    id: my_checkbox


                Spinner:
                    id: tipo_refeicao
                    text: "Almoço"  # Texto padrão
                    values: ["Café da manhã", "Almoço", "Jantar", "Lanche"]
                    size_hint_y: None
                    height: '40dp'
                    background_normal: ''
                    background_color: (0.9, 0.9, 0.9, 1)
                    color: (0, 0, 0, 1)

                FloatLayout:
                    ImageButton:
                        source: "icones/add.png"
                        on_release: app.firebase.adicionar_ingrediente(nome.text, quantidade.text)
                        pos_hint: {"right": 0.98, "top": 0.6}
                        size_hint: 0.1, 0.9
                    TextInput:
                        id: nome
                        hint_text: "Nome"
                        pos_hint: {"right": 0.85, "top": 1}
                        size_hint: 0.85, 1
                    TextInput:
                        id: quantidade
                        hint_text: "Quantidade"
                        pos_hint: {"right": 0.85, "top": 0.06}
                        size_hint: 0.85, 1

                Label:
                    text: ""

                GridLayout:
                    cols: 1
                    id:lista_ingredientes
                    spacing: 2, 2
                    height: self.minimum_height
                    row_default_height: "40dp"
                    row_force_default: True



        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#eb7b29")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

            pos_hint: {"right": 0.9, "top": 0.18}
            size_hint: 0.8, 0.065
            text: "[color=#FFFFFF]Cadastrar[/color]"
            id: label_total_vendas
            markup: True
            on_release: app.firebase.criar_receita(tipo=tipo_refeicao.text, ingredientes=app.firebase.ingredientes, usuario=app.local_id)


        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.07}
            size_hint: 1, 0.07
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#8dd0d9")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/receita.png"
                on_release: app.mudar_tela("receitaspage")
            ImageButton:
                source: "icones/fogo.png"
                on_release: app.mudar_tela("caloriaspage")
            ImageButton:
                source: "icones/graph.png"
                on_release: app.mudar_tela("glicemiapage")
            ImageButton:
                source: "icones/user.png"
                on_release: app.mudar_tela("perfilpage")
