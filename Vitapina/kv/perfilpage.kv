<PerfilPage>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#FFFBF0")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (20, 20), (20, 20)]
            text: ""
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.38

        Label:
            id: label_nome
            text: "[size=25][b]Nome Sobrenome[/b][/size]"
            pos_hint: {"right": 0.75, "top": 0.98}
            size_hint: 0.1, 0.38
            markup: True
            halign: 'left'

        Label:
            text: "Usuário há XX dias"
            pos_hint: {"right": 0.75, "top": 0.95}
            size_hint: 0.1, 0.38
            markup: True
            id: label_data
            halign: 'left'

        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#eb7b29")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

            pos_hint: {"right": 0.82, "top": 0.72}
            size_hint: 0.25, 0.05
            text: "[color=#FFFFFF]Editar Perfil[/color]"
            id: label_total_vendas
            markup: True
            on_release: print("teste")

        Image:
            pos_hint: {"right": 0.625, "top": 1}
            size_hint: 0.25, 0.1
            source: "icones/logotipo.png"
            id: foto_perfil

        Image:
            pos_hint: {"right": 0.4, "top": 0.9}
            size_hint: 0.3, 0.25
            source: "icones/fotos_perfil/foto3.png"
            id: foto_perfil

# ------------------------------------------------------------------------------

        GridLayout: #NOME E SOBRENOME
            pos_hint: {"right": 0.85, "top": 0.55}
            size_hint: 0.7, 0.055
            cols: 2
            size_hint_y: None
            spacing: 2, 2
            height: self.minimum_height
            row_default_height: "30dp"
            row_force_default: True
            halign: 'left'
            spacing: 25, 0

            GridLayout: #NOME
                cols: 1
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "30dp"
                row_force_default: True
                halign: 'left'
                Label:
                    text: "[color=#000000][size=17][b]Nome:[/b][/size][/color]"
                    markup: True
                    halign: 'left'
                    size_hint_x: None  # Remove o comportamento de dimensionamento automático

                TextInput:
                    background_normal: ''  # Remove o fundo
                    disabled_foreground_color: 0, 0, 0, 1  # Cor do texto (preto) quando desabilitado
                    disabled_background_color: 1, 1, 1, 0  # Fundo transparente quando desabilitado
                    foreground_color: 0, 0, 0, 1  # Cor do texto (preto)
                    cursor_color: 0, 0, 0, 1  # Cor do cursor (preto)
                    id: nome
                    hint_text: "Nome"

                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex("#feeebe")
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]  # Cantos arredondados

                        Color:
                            rgb: utils.get_color_from_hex("#000000")
                        Line:
                            width: 0.8  # Espessura da borda
                            rounded_rectangle: [self.x, self.y, self.width, self.height, 15]  # Bordas arredondadas


            GridLayout: # SOBRENOME
                cols: 1
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "30dp"
                row_force_default: True
                halign: 'left'
                Label:
                    text: "[color=#000000][size=17][b]Sobrenome:[/b][/size][/color]"
                    markup: True
                    halign: 'left'
                    size_hint_x: None  # Remove o comportamento de dimensionamento automático

                TextInput:
                    background_normal: ''  # Remove o fundo
                    disabled_foreground_color: 0, 0, 0, 1  # Cor do texto (preto) quando desabilitado
                    disabled_background_color: 1, 1, 1, 0  # Fundo transparente quando desabilitado
                    foreground_color: 0, 0, 0, 1  # Cor do texto (preto)
                    cursor_color: 0, 0, 0, 1  # Cor do cursor (preto)
                    id: sobrenome
                    hint_text: "Sobrenome"

                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex("#feeebe")
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]  # Cantos arredondados

                        Color:
                            rgb: utils.get_color_from_hex("#000000")
                        Line:
                            width: 0.8  # Espessura da borda
                            rounded_rectangle: [self.x, self.y, self.width, self.height, 15]  # Bordas arredondadas

    # ------------------------------------------------------------------------------
