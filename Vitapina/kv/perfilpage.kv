            pos_hint: {"right": 0.85, "top": 0.250}
            size_hint: 0.1, 0.055
            disabled: True

        LabelButton:
            pos_hint: {"right": 0.53, "top": 0.200}
            size_hint: 0.1, 0.1
            text: "[color=#0000FF][u]Alterar minha senha[/u][/color]"
            id: label_total_vendas
            markup: True
            on_release: app.firebase.fazer_login(email.text, senha.text)


        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.07}
            size_hint: 1, 0.07
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#8dd0d9")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/receita.png"
                on_release: app.mudar_tela("receitaspage")
            ImageButton:
