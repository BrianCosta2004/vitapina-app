<DetalhesRefeicaoPage>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#8dd0d9")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (60, 40), (60, 40)]
            text: ""
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.19

        Retangulo:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("FFFFFF")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
            pos_hint: {"right": 0.9, "top": 0.79}
            size_hint: 0.8, 0.6

        ScrollView:
            pos_hint: {"right": 0.9, "top": 0.78}
            size_hint: 0.8, 0.59
            GridLayout:
                cols: 1
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "20dp"
                row_force_default: True

                Label:
                    text: "[color=#000000][b]Macronutrientes:[/b][/color]"
                    markup: True
                Label:
                    text: "[color=#000000][b]____________________________[/b][/color]"
                    markup: True

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    spacing: 2, 2
                    height: self.minimum_height
                    row_default_height: "20dp"
                    row_force_default: True
                    Label:
                        text: "[color=#000000][b]Prote√≠nas[/b][/color]"
                        markup: True
                    Label:
                        text: "[color=#000000][b]35g[/b][/color]"
                        markup: True
                        id: proteinas

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    spacing: 2, 2
                    height: self.minimum_height
                    row_default_height: "20dp"
                    row_force_default: True
                    Label:
                        text: "[color=#000000][b]Carboidratos[/b][/color]"
                        markup: True
                    Label:
                        text: "[color=#000000][b]30g[/b][/color]"
                        markup: True
                        id: carboidratos

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    spacing: 2, 2
                    height: self.minimum_height
                    row_default_height: "20dp"
                    row_force_default: True
                    Label:
                        text: "[color=#000000][b]Gorduras[/b][/color]"
                        markup: True
                    Label:
                        text: "[color=#000000][b]30g[/b][/color]"
                        markup: True
                        id: gorduras

        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#eb7b29")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

            pos_hint: {"right": 0.8, "top": 0.17}
            size_hint: 0.6, 0.065
            text: "[color=#FFFFFF]Editar[/color]"
            id: label_total_vendas
            markup: True
            on_release: app.show_popup()

        Image:
            pos_hint: {"right": 0.625, "top": 0.95}
            size_hint: 0.25, 0.1
            source: "icones/logotipo.png"
            id: foto_perfil

        CircleAroundButton:
            id: circle_widget

        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.07}
            size_hint: 1, 0.07
            canvas:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/receita.png"
                on_release: app.mudar_tela("receitaspage")
                on_press: circle_widget.show_circle(self.center, self.size)
            ImageButton:
                source: "icones/fogo.png"
                on_release: app.mudar_tela("caloriaspage")
                on_press: circle_widget.show_circle(self.center, self.size)
            ImageButton:
                source: "icones/graph.png"
                on_release: app.mudar_tela("glicemiapage")
                on_press: circle_widget.show_circle(self.center, self.size)
            ImageButton:
                source: "icones/user.png"
                on_release: app.mudar_tela("perfilpage")
                on_press: circle_widget.show_circle(self.center, self.size)

