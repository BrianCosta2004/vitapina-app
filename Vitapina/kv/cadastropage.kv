<CadastroPage>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#FFFBF0")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#139bad")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (20, 20), (20, 20)]
            text: ""
            pos_hint: {"right": 0.95, "top": 1}
            size_hint: 0.9, 0.33

        Image:
            pos_hint: {"right": 0.9, "top": 1}
            size_hint: 0.8, 0.10
            source: "icones/logotipo.png"
            id: foto_perfil

        Image:
            pos_hint: {"right": 1, "top": 0.89}
            size_hint: 0.7, 0.18
            source: "icones/balaum.png"
            id: foto_perfil

        Image:
            pos_hint: {"right": 0.75, "top": 0.9}
            size_hint: 1, 0.25
            source: "icones/pina.png"
            id: foto_perfil

        TextInput:
            id: sobrenome
            hint_text: "Sobrenome"
            pos_hint: {"right": 0.85, "top": 0.605}
            size_hint: 0.33, 0.055

        TextInput:
            id: nome
            hint_text: "Nome"
            pos_hint: {"right": 0.48, "top": 0.605}
            size_hint: 0.33, 0.055

        TextInput:
            multiline: False
            id: telefone
            hint_text: "Telefone"
            pos_hint: {"right": 0.85, "top": 0.53}
            size_hint: 0.7, 0.055


        TextInput:
            id: email
            hint_text: "E-mail"
            pos_hint: {"right": 0.85, "top": 0.455}
            size_hint: 0.7, 0.055

        TextInput:
            id: senha
            password: True
            hint_text: "Senha"
            pos_hint: {"right": 0.85, "top": 0.380}
            size_hint: 0.7, 0.055

        TextInput:
            id: repetirsenha
            password: True
            hint_text: "Repita a Senha"
            pos_hint: {"right": 0.85, "top": 0.305}
            size_hint: 0.7, 0.055

        LabelButton:
            pos_hint: {"right": 0.635, "top": 0.125}
            size_hint: 0.27, 0.1
            text: "[color=#000000]JÃ¡ tem uma conta?[/color]  [color=#0000FF][u]Fazer login[/u][/color]"
            id: label_total_vendas
            markup: True
            on_release: app.mudar_tela("loginpage")

        Label:
            id: mensagem_erro
            text: ""
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.26}
            size_hint: 0.8, 0.1

        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#eb7b29")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

            pos_hint: {"right": 0.9, "top": 0.18}
            size_hint: 0.8, 0.065
            text: "[color=#FFFFFF]Cadastrar[/color]"
            id: label_total_vendas
            markup: True
            on_release: app.firebase.criar_conta(email.text, senha.text, nome.text, sobrenome.text, telefone.text)